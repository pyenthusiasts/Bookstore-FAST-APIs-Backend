# Staging Environment Configuration

# Application
APP_NAME=Bookstore API (Staging)
APP_VERSION=1.0.0
DEBUG=True

# API
API_V1_PREFIX=/api/v1

# Security
SECRET_KEY=staging-secret-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database
SQLALCHEMY_DATABASE_URL=postgresql://bookstore:staging_password@postgres-staging:5432/bookstore_staging

# Redis
REDIS_URL=redis://redis-staging:6379/0

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000,https://staging.yourdomain.com

# Logging
LOG_LEVEL=DEBUG

# Monitoring
ENABLE_METRICS=True

# Rate Limiting
RATE_LIMIT_ENABLED=False
