apiVersion: v1
kind: Secret
metadata:
  name: bookstore-secrets
type: Opaque
stringData:
  secret-key: "your-secret-key-here-change-this"
  database-url: "postgresql://user:password@postgres:5432/bookstore"
  # Add other secrets as needed
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: bookstore-config
data:
  APP_NAME: "Bookstore API"
  LOG_LEVEL: "INFO"
  BACKEND_CORS_ORIGINS: "http://localhost:3000,https://yourdomain.com"
