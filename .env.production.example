# Production Environment Configuration

# Application
APP_NAME=Bookstore API
APP_VERSION=1.0.0
DEBUG=False

# API
API_V1_PREFIX=/api/v1

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-SECRET-KEY-IN-PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (PostgreSQL for production)
SQLALCHEMY_DATABASE_URL=postgresql://bookstore:CHANGE_PASSWORD@postgres:5432/bookstore

# Redis (for caching and rate limiting)
REDIS_URL=redis://:CHANGE_PASSWORD@redis:6379/0

# CORS (comma-separated list of allowed origins)
BACKEND_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=INFO

# Monitoring
ENABLE_METRICS=True
SENTRY_DSN=

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@yourdomain.com

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# Workers (for production deployment)
WEB_CONCURRENCY=4
MAX_WORKERS=10
